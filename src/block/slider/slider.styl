.slider
  max-width 100%
  padding-bottom 40%
  height 0
  position relative

.sliderCenter
  margin 250px 0 400px 0
  width 100%
  position absolute
  z-index 999
  display flex
  flex-direction column
  justify-content center
  align-items center

.sliderCenter___sliderNav
  display flex
  flex-direction row
  justify-content center
  align-items center

#previous, #next
  border none
  border-radius 100%
  background-color none
  color none
  outline none
  text-decoration none
  width 70px
  height 70px

#previous
  margin-right 500px

#next
  margin-left 500px

#pause
  display none

.sliderCenterText
  width 100%
  height 124px
  color #ffffff
  font-family Raleway-Medium
  font-size 39px
  font-weight 900
  text-transform uppercase
  text-align center

.sliderCenter__sliderBtn
  margin-top 13%

.sliderCenter__sliderBtn a
  text-decoration none
  cursor pointer
  border none
  color #ffffff
  text-transform uppercase
  width 224px
  height 42px
  background-color #2baec9
  opacity 0.97
  padding 15px
  font-family GothaProMed
  font-size 19px
  font-weight 700

.sliderCenter__sliderBtn a:hover
  opacity 1

.slider li
  max-width 100%
  padding-bottom 40%
  height 0

#slide1
  background url("../img/slide1.jpg") no-repeat
  background-position top
  background-size 100%

#slide2
  background-image url("../img/slide2.jpg")
  background-position top
  background-size 100%

#slide3
  background-image url("../img/slide3.jpg")
  background-position top
  background-size 100%

#slide4
  background-image url("../img/slide4.jpg")
  background-position top
  background-size 100%

#slides
  position relative
  height 828px
  padding 0
  margin 0
  list-style-type none

.slide
  position absolute
  left 0
  top 0
  width 100%
  height 100%
  opacity 0
  z-index 1
  transition opacity 1s

.showing
  opacity 1
  z-index 2
