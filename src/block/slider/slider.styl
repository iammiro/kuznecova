.slider
  max-width 100%
  padding-bottom 40%
  height 0
  position relative

.sliderCenter
  margin-top 250px
  width 100%
  position absolute
  z-index 999
  display flex
  flex-direction column
  justify-content space-between
  align-items center

.sliderCenter___sliderNav
  display flex
  flex-direction row
  justify-content center
  align-items center

#previous, #next
  border none
  border-radius 100%
  background-color none
  color none
  outline none
  text-decoration none
  width 0
  height 0

#pause
  display none

.sliderCenterText
  width 936px
  height 124px
  color #ffffff
  font-family Raleway-Medium
  font-size 39px
  font-weight 900
  text-transform uppercase
  padding 0 70px
  text-align center

.sliderCenter__sliderBtn
  margin-top 5%

.sliderCenter__sliderBtn button
  cursor pointer
  border none
  color #ffffff
  text-transform uppercase
  width 224px
  height 42px
  background-color #2baec9
  opacity 0.97

.sliderCenter__sliderBtn button:hover
  opacity 1

.slider li
  max-width 100%
  padding-bottom 40%
  height 0

#slide1
  background url("../img/slide1.jpg")
  background-position top

#slide2
  background-image url("../img/slide2.jpg")
  background-position top

#slide3
  background-image url("../img/slide3.jpg")
  background-position top

#slide4
  background-image url("../img/slide4.jpg")
  background-position top

#slides
  position relative
  height 828px
  padding 0
  margin 0
  list-style-type none

.slide
  position absolute
  left 0
  top 0
  width 100%
  height 100%
  opacity 0
  z-index 1
  transition opacity 1s

.showing
  opacity 1
  z-index 2
