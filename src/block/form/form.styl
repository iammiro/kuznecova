.formWrap
  background-image url("../img/blockFormBack.png")
  background-position top
  display flex
  flex-direction column
  justify-content center
  align-items center
  padding 30px 0

.formWrap .wrap
  display flex
  flex-direction column
  justify-content center
  align-items center

.wrap__formH3
  color #ffffff
  font-family Raleway-Medium
  font-size 46px
  font-weight 700
  padding 20px 0

form
  width 722px
  height 423px
  background-color #43dbfa
  border-radius 8px
  padding 20px 0
  margin 20px 0
  display flex
  flex-direction column
  justify-content center
  align-items center

input:placeholder-shown
  color black
  font-family OpenSans
  font-size 20px
  font-weight 400
  line-height 20px

.wrap__inputBlock
  margin 20px 0
  width 614px
  height 60px
  display flex
  flex-direction row
  justify-content center
  align-items center

.wrap__inputBlock input[type="text"], input[type="email"]
  width 613px
  height 47px
  background-color #ffffff
  color #1f2429

.radio-block
  margin 20px 0
  width 614px
  height 60px
  display flex
  flex-direction row
  justify-content center
  align-items center

.radio-block__radio-item
  color black
  display block
  position relative
  float left
  width 307px
  height 47px
  border-bottom 1px solid #111111

.radio-block__radio-item input[type=radio]
  position absolute
  visibility hidden

.radio-block__radio-item label
  display block
  position relative
  font-weight 300
  font-size 1.35em
  padding 5px 25px 25px 80px
  margin 10px auto
  height 30px
  z-index 9
  cursor pointer
  -webkit-transition all 0.25s linear

.radio-block__radio-item .check
  background-color white
  display block
  position absolute
  border 1px solid black
  border-radius none
  height 49px
  width 307px
  top 0px
  left 0px
  z-index 5
  transition border .25s linear
  -webkit-transition border .25s linear

input[type=radio]:checked ~ .check
  border 1px solid black
  background-color #12c9ed

input[type=radio]:checked ~ .check::before
  background-color #12c9ed

input[type=radio]:checked ~ label
  color black

#checkbox
  display flex
  flex-direction row
  align-items flex-start
  justify-content flex-start
  color #000000
  font-family OpenSans
  font-size 20px
  font-weight 400
  line-height 20px

.wrap__inputBlock input[type="checkbox"]
  width 21px
  height 22px
  border 1px solid rgba(115, 115, 115, 0.5)
  background-color #ffffff
  color #000000
  font-family OpenSans
  font-size 20px
  font-weight 400
  line-height 20px

form button
  background-color #12c9ed
  color #ffffff
  width 330px
  height 52px
  opacity 0.96
  font-family GothaProMed
  font-size 24px
  font-weight 700
  text-transform uppercase
  border none