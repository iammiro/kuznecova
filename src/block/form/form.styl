.formWrap
  background-image url("../img/blockFormBack.png")
  background-position top
  display flex
  flex-direction column
  justify-content center
  align-items center
  padding 30px 0

.formWrap .wrap
  display flex
  flex-direction column
  justify-content center
  align-items center

.wrap__formH3
  color #ffffff
  font-family Raleway-Medium
  font-size 46px
  font-weight 700
  padding 20px 0

form
  width 722px
  height 423px
  background-color #43dbfa
  border-radius 8px
  padding 20px 0
  margin 20px 0
  display flex
  flex-direction column
  justify-content center
  align-items center

input:placeholder-shown
  color black
  font-family OpenSans
  font-size 20px
  font-weight 400
  line-height 20px

.wrap__inputBlock
  margin 20px 0
  width 613px
  height 60px
  display flex
  flex-direction row
  justify-content center
  align-items center

.wrap__inputBlock input[type="text"], input[type="email"]
  width 613px
  height 47px
  background-color #ffffff
  color #1f2429

.wrap__inputBlock input[type="radio"]
  width 300px
  height 49px

.radioBlock
 display flex

.wrap__inputBlock input[type="checkbox"]
  width 21px
  height 22px
  border 1px solid rgba(115, 115, 115, 0.5)
  background-color #ffffff
  color #000000
  font-family OpenSans
  font-size 20px
  font-weight 400
  line-height 20px

form button
  background-color #12c9ed
  color #ffffff
  width 330px;
  height 52px
  opacity 0.96
  font-family GothaProMed
  font-size 24px
  font-weight 700
  text-transform uppercase
  border none