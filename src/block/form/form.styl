//  custom radio buttons

.radio-block
  margin 20px 0
  width 614px
  height 60px
  display flex
  flex-direction row
  justify-content center
  align-items center

.radio-block .radio-item
  color black
  display block
  position relative
  float left
  width 307px
  height 47px
  border-bottom 1px solid #111111

.radio-block .radio-item input[type=radio]
  position absolute
  visibility hidden

.radio-block .radio-item label
  display block
  position relative
  font-weight 300
  font-size 1.35em
  padding 5px 25px 25px 80px
  margin 10px auto
  height 30px
  z-index 9
  cursor pointer
  -webkit-transition all 0.25s linear

.radio-block .radio-item .check
  background-color white
  display block
  position absolute
  border 1px solid black
  border-radius none
  height 49px
  width 307px
  top 0px
  left 0px
  z-index 5
  transition border .25s linear
  -webkit-transition border .25s linear

input[type=radio]:checked ~ .check
  border 1px solid black
  background-color #12c9ed

input[type=radio]:checked ~ .check::before
  background-color #12c9ed

input[type=radio]:checked ~ label
  color black

